<!DOCTYPE html>
<html>
<head>
  <title>TrainService</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='navbar navbar-inverse navbar-fixed-top'>
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'Train-Service', new_route_reference_path, :class => "navbar-brand" %>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to 'Просчитать маршрут', new_route_reference_path %>
          </li>
          <li>
            <%= link_to 'Расписание по станцие', new_point_reference_path %>
          </li>
          <% if current_user %>
            <% if current_user.admin %>
              <li>
                <%= link_to 'Маршруты', routes_path %>
              </li>
              <li>
                <%= link_to 'Показать заказы', orders_path %>
              </li>
            <% end %>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <li>
              <div class="logged">
                Logged in as <strong><%= current_user.email %></strong>
              </div>
            </li>
            <li>
              <%= link_to 'Edit profile', edit_user_registration_path %>
            <li>
            </li>
            <li>
              <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
            </li>
            <% else %>
            <li>
              <%= link_to 'Login', new_user_session_path %>
            </li>
            <li>
              <%= link_to 'Sign_Up', new_user_registration_path %>
            </li>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <%= yield %>
    </div>
  </div>
</body>
</html>
