<%= form_for @route_references, method: :get do |f| %>
  <%= f.label 'Пункт отправки' %>
  <%= f.select :start_point, Point.all.map { |point| [point.name, point.id] }.sort, {} %>
  <%= f.label 'Пункт назначения' %>
  <%= f.select :goal_point, Point.all.map { |point| [point.name, point.id] }.sort, {} %>
  <%= f.submit 'ok' %>
<% end %>
